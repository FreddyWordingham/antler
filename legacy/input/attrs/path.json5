{   // Map of surface attributes gradients.
    jwst_mirror : { Mirror  : { abs: 0.4 }},                                // Reflective. Absorb fraction of incoming light.
    jwst_reflect: { Mirror  : { abs: 0.8}},

    mirror      : { Mirror  : { abs: 0.2}},
    dome_top    : { Refractive  : { abs: 0.1, inside: 1.1, outside: 1.0 }}, // Refractive. Absorb fraction. Inside and outside refractive indices.
    lava        : { Luminous    : { mult: 2.0} },                           // Luminous object. Multiply the light level by this fraction
    clouds      : { Transparent : { abs: 0.1} },                            // Partialy transparent object. Absorb fraction of light.

    bulbs       : { Luminous    : { mult: 2.0} },

    fall        : { Refractive  : { abs: 0.25, inside: 1.3, outside: 1.0 }},
    puddles     : { Mirror      : { abs: 0.15}},

    glide_0     : { Refractive  : { abs: 0.25, inside: 1.3, outside: 1.0 }},
    glide_1     : { Refractive  : { abs: 0.25, inside: 1.3, outside: 1.0 }},
    glide_2     : { Refractive  : { abs: 0.25, inside: 1.3, outside: 1.0 }},
    knot        : { Refractive  : { abs: 0.3, inside: 1.5, outside: 1.0 }},
    moon        : { Mirror      : { abs: 0.95}},
    solar       : { Transparent : { abs: 0.2}},
    starfield   : { Mirror      : { abs: 0.95}},

    leaves_0    : { Transparent : { abs: 0.5} },
    leaves_1    : { Transparent : { abs: 0.5} },
    leaves_2    : { Transparent : { abs: 0.5} },
}
